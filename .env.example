# RSS News System Environment Configuration

# Database Configuration
DB_PASSWORD=your_secure_db_password_here

# OpenAI API (for GPT-5 and embeddings)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Local LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:3b
ENABLE_LOCAL_CHUNKING=true
ENABLE_LOCAL_EMBEDDINGS=false

# OpenAI Embedding Migration Service
OPENAI_EMBEDDING_SERVICE_ENABLED=true
OPENAI_EMBEDDING_BATCH_SIZE=100
OPENAI_EMBEDDING_MAX_RETRIES=3
EMBEDDING_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Production Database (Railway)
PG_DSN=postgresql://postgres:your_password@your_host:port/your_database

# Monitoring (optional)
GRAFANA_PASSWORD=admin
ENABLE_METRICS=true
METRICS_HOST=0.0.0.0
METRICS_PORT=9464

PROMETHEUS_URL=http://localhost:9090
GRAFANA_BASE_URL=http://localhost:3000


# Scoring Configuration (optional overrides)
SCORING_SEMANTIC_WEIGHT=0.58
SCORING_FTS_WEIGHT=0.32
SCORING_FRESHNESS_WEIGHT=0.06
SCORING_SOURCE_WEIGHT=0.04
SCORING_TAU_HOURS=72

# Performance Settings
SCORING_MAX_PER_DOMAIN=3
SCORING_MAX_PER_ARTICLE=2
SEARCH_DEFAULT_LIMIT=10
SEARCH_MAX_LIMIT=50
SEARCH_CACHE_TTL_SECONDS=900

# Feature Flags
ENABLE_MMR_DIVERSIFICATION=true
ENABLE_RESULT_CACHING=true
ENABLE_SEARCH_LOGGING=true
