# Required
PG_DSN=postgresql://postgres:password@hostname.railway.app:5432/railway?sslmode=require

# Timezone for scheduling/log context (cron runs will use New York time)
TZ=America/New_York

# Optional — enable LLM features in Stage 6–8
# GEMINI_API_KEY=your-gemini-api-key
# OPENAI_API_KEY=your-openai-api-key

# Pinecone (enable external vector store for embeddings)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_INDEX=rssnews-embeddings
# PINECONE_REGION=us-east-1-aws
# PINECONE_NAMESPACE=prod

# Optional — logging tweaks
# LOG_LEVEL=INFO
# LOG_FORMAT=text

# Telegram reporting (required for 'python main.py report --send-telegram')
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_ID=your-chat-id-or-channel-id

# Storage paths (default values used by the app)
# FULLTEXT_DIR=./storage/articles
